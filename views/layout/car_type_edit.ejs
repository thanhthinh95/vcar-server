<% if(page) {%>
<link rel="stylesheet" href='<%- "pages/" + page + "/style.css"%>'>
<%}%>

<% if(plugins) {%>
<% _.forEach(plugins, function(item){%>
<link rel="stylesheet" href='<%- "plugins/" + item + "/style.css"%>'>
<%})%>
<%}%>

<script>
    var car_type = JSON.parse('<%- JSON.stringify(data.car_type) %>');

    console.log(car_type);

</script>

<div class='card'>
    <div class="card-header col-lg-12 col-md-12 col-sm-12">
        <b class=""> <i class='<%- (data.menu ? data.menu.icon : "fa fa-bandcam")%>'></i> <%- title%></b>
    </div>

    <div class='card-body'>
        <form id='form_data'>
            <div class="row">
                <div class="col col-lg-4 col-md-4 col-sm-4">
                    <input type="hidden" name="_id" value="<%- data.car_type._id%>">

                    <div class="row pt-1">
                        <b class="col col-md-4 col-sm-4 my-auto text-right">Tên Loại Xe</b>
                        <input class="col col-md-8 col-sm-8 selectpicker form-control" name="name" autocomplete="false"
                            required placeholder="VD: Gường nằm" value="<%- data.car_type.name%>"></input>
                    </div>

                    <div class="row pt-1">
                        <b class="col col-md-4 col-sm-4 my-auto text-right">Số Lượng Ghế</b>
                        <input class="col col-md-8 col-sm-8 form-control" id="numberSeat" name="numberSeat"
                            type="number" min='2' max='80' required step='1' placeholder="VD: 16" value="<%- data.car_type.numberSeat%>"
                            readonly></input>
                    </div>

                    <div class="row pt-1">
                        <b class="col col-md-4 col-sm-4 my-auto text-right">Trạng Thái</b>
                        <select class="col col-md-8 col-sm-8 selectpicker form-control" name="status" required
                            title="Chọn Trạng Thái" name="status">
                            <% _.forEach(data.status, function(item) {%>
                            <option <%- (_.isEqual(data.car_type.status, item._id) ? 'selected ' : ' ')%>
                                value="<%- item._id%>"><%- item.name%></option>
                            <%})%>
                        </select>
                    </div>
                </div>

                <div class="col pl-5 pr-3 col-lg-8 col-md-8 col-sm-8">
                    <div class="row pt-1">
                        <input class="col col-md-4 col-sm-4 form-control" id="numColumn" type="number" min='3' max='10'
                            step='1' placeholder="Số cột VD: 4"></input>

                        <input class="col col-md-4 col-sm-4 form-control " id="numRow" type="number" min='3' max='20'
                            step='1' placeholder="Số hàng VD: 6"></input>

                        <span class="col col-md-4 col-sm-4">
                            <span class="btn btn-primary w-100" data-toggle="tooltip" id='new_floor' title="Thêm Tầng">
                                <i class="fa fa-plus-circle text-white mx-auto" aria-hidden="true"></i> Thêm Tầng
                            </span>
                        </span>
                    </div>
        </form>



        <div class="row" id="diagram_floor"></div>


        <div class="row pt-3">
            <span class="pl-2">
                <a class="btn btn-success btn-icon-text m-t-10 m-r-10 waves-effect waves-effect" data-toggle="tooltip"
                    title="Trở về quản lý thể loại xe" href="/#car_type">
                    <i class="fa fa-chevron-circle-left"></i> Quay lại</a>
            </span>

            <span class="pl-2">
                <button type='submit' class="btn btn-primary" data-toggle="tooltip" title="Cập nhật thể loại xe">
                    <i class="fa fa-plus-circle text-white mx-auto" aria-hidden="true"></i> Cập nhật
                </button>
            </span>
        </div>
    </div>

</div>
</form>

</div>

</div>


<% if(page) {%>
<script src='<%- "pages/" + page + "/script.js"%>'></script>
<%}%>

<% if(plugins) {%>
<% _.forEach(plugins, function(item){%>
<script src='<%- "plugins/" + item + "/script.js"%>'></script>
<%})%>
<%}%>