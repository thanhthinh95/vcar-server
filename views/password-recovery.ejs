<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon"  type="image/png" href="img/favicon.ico">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/jquery-comfirm/jquery-confirm.css">


    <title> <%- title ? title : 'V-Car'%> </title>
    <% if(page) {%>
      <link rel="stylesheet" href = '<%- "pages/" + page + "/style.css"%>'>
    <%}%>
  </head>

  <body class="container" background="img/background.jpg" style="background-size: cover">
        <div class="row justify-content-center h-100">
          <div class="col-lg-5 col-md-7" style="margin-top:15%">
            <div class="card-header pt-0">
              <div class="card-header row bg-primary">
                <div class="col-lg-4 col-md-4">
                  <img height="40px" src="img/vcar_logo.png">
                </div>

                <div class="col-lg-8 col-md-8" style="position: relative">
                  <span class="text-white" style="position: absolute; bottom : 0; right : 0; font-weight: 500">KHÔI PHỤC MẬT KHẨU</span>
                </div>
              </div>
              
              <div class="card-body">
                <form role="form" id="form_password_recovery">
                  <div class="form-group mb-3">
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope-o"></i></span>
                      </div>
                      <input class="form-control" placeholder="Thư điện tử" type="email"  id="email" name="email" required>
                    </div>
                  </div>
    
                  <div class="col-md-12 text-center">
                    <button class="btn btn-primary my-4 col-md-5">Khôi phục</button>
                    <a class="btn btn-primary text-white my-4 col-md-5" href="/">Đăng nhập</a>
                  </div>
                </form>
              </div>
            </div>
    </div>

    <%- include('loader.ejs') %>


  <script src="js/jquery/jquery-3.4.1.min.js"></script>
  <script src="js/bootstrap/bootstrap.min.js"></script>
  <script src="js/jquery-comfirm/jquery-confirm.js"></script>
  <% if(page) {%>
    <script src='<%- "pages/" + page + "/script.js"%>'></script>
  <%}%>
  <script src="js/global.js"></script>

</html>







  