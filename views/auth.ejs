<% if(page) {%>
    <link rel="stylesheet" href = '<%- "pages/" + page + "/style.css"%>'>
<%}%>


<div class='card'>
    <div class="card-header col-lg-12 col-md-12 col-sm-12">
        <b class=""> <i class="fa fa-map-signs" aria-hidden="true"></i> CHỌN QUYỀN TRUY CẬP HỆ THỐNG</b>
    </div>
    <div class='card-body d-flex justify-content-center '>
        <div class="col-lg-6 col-md-12 col-sm-12">
            <% _.forEach(data.roles, function(item){%>
                <button type="button" class="btn btn-info mt-3 col-lg-12 col-md-12 col-sm-12"
                    data_role_id = '<%- item._id%>' 
                    name='btn_role'
                    ><%- item.name ? item.name : "Chưa xác định"%></button>
            <%})%>
        </div>

    </div>
</div>


<% if(page) {%>
    <script src='<%- "pages/" + page + "/script.js"%>'></script>
<%}%>
